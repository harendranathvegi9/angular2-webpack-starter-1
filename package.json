{
  "name": "@jh-code/angular2-webpack-starter",
  "version": "1.0.2",
  "description": "Basic Angular2 app with AoT compilation for production and a development environment.",
  "main": "app/main.ts",
  "scripts": {
    "build": "npm run clean && npm run compass:prod && npm run ngc && npm run webpack:prod",
    "ci": "npm run compass:prod && npm run ngc && npm run webpack:ci",
    "clean": "rimraf dist build app/public/styles/style.css && find ./app -name '*.component.css' -type f -delete",
    "compass:prod": "compass compile --output-style compressed --force",
    "compass:dev": "compass watch",
    "ngc": "ngc -p tsconfig.prod.json",
    "serve": "lite-server",
    "start": "npm-run-all --parallel compass:dev webpack:dev",
    "webpack:ci": "webpack --config webpack.prod.config.js",
    "webpack:dev": "webpack-dev-server --progress --port 4200",
    "webpack:prod": "webpack --progress --config webpack.prod.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jh-code/angular2-webpack-starter"
  },
  "keywords": [
    "tree-shaking",
    "typescript",
    "webpack",
    "angular",
    "angular2"
  ],
  "author": {
    "name": "jh-code",
    "email": "jared@codeninja.guru"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^2.4.3",
    "@angular/compiler": "^2.4.3",
    "@angular/core": "^2.4.3",
    "@angular/forms": "^2.4.3",
    "@angular/http": "^2.4.3",
    "@angular/platform-browser": "^2.4.3",
    "@angular/platform-browser-dynamic": "^2.4.3",
    "@angular/router": "^3.4.3",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.18",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "es6-shim": "^0.35.2",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.3",
    "zone.js": "^0.7.5"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.3",
    "@ngtools/webpack": "^1.2.3",
    "@types/node": "^7.0.0",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "3.0.0-beta.18",
    "codelyzer": "^2.0.0-beta.4",
    "connect-history-api-fallback": "^1.3.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.26.0",
    "json-loader": "^0.5.4",
    "lite-server": "^2.2.2",
    "npm-run-all": "^4.0.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-helpers": "^1.1.2",
    "tslint": "^4.3.1",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.1.5",
    "webpack": "2.2.0-rc.2",
    "webpack-dev-server": "^2.2.0-rc.0"
  }
}
