{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "build",
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "app/main.aot.ts",
        "app/app.module.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "app/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "build"
    }
}
